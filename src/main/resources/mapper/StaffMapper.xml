<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.codeshu.mapper.StaffMapper">
    <select id="findByName" parameterType="string" resultType="com.codeshu.entity.Staff">
        select * from staff where username=#{username}
    </select>
    <insert id="saveStaff" parameterType="com.codeshu.entity.Staff" useGeneratedKeys="true" keyProperty="id">
        insert into staff(username,password,salt,roleId) values(#{username},#{password},#{salt},3)
    </insert>
</mapper>
